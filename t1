package com.calculator;

import static org.junit.Assert.assertEquals;
import static org.junit.Assert.assertThrows;
import org.junit.Before;
import org.junit.Test;

public class CalculatorTest {

    private Calculator calculator;

    @Before
    public void setUp() {
        calculator = new Calculator();
    }

    @Test
    public void testAdd() {
        assertEquals(15.0, calculator.add(10.0, 5.0), 0.001);
        assertEquals(-5.0, calculator.add(-10.0, 5.0), 0.001);
        assertEquals(0.0, calculator.add(0.0, 0.0), 0.001);
    }

    @Test
    public void testSubtract() {
        assertEquals(5.0, calculator.subtract(10.0, 5.0), 0.001);
        assertEquals(-15.0, calculator.subtract(-10.0, 5.0), 0.001);
        assertEquals(0.0, calculator.subtract(5.0, 5.0), 0.001);
    }

    @Test
    public void testMultiply() {
        assertEquals(50.0, calculator.multiply(10.0, 5.0), 0.001);
        assertEquals(-50.0, calculator.multiply(-10.0, 5.0), 0.001);
        assertEquals(0.0, calculator.multiply(10.0, 0.0), 0.001);
    }

    @Test
    public void testDivide() {
        assertEquals(2.0, calculator.divide(10.0, 5.0), 0.001);
        assertEquals(-2.0, calculator.divide(-10.0, 5.0), 0.001);
        assertEquals(0.5, calculator.divide(1.0, 2.0), 0.001);
    }

    @Test
    public void testDivideByZero() {
        assertThrows(IllegalArgumentException.class, () -> {
            calculator.divide(10.0, 0.0);
        });
    }
}
